{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug nodes",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/push_swap",
            "args": ["200", "20", "801", "141253", "53", "23", "4"], // Add your program arguments here
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this path if necessary
            ],
            "logging": {
                "engineLogging": true
            }
        }
    ]
}