{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Push Swap",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/push_swap", // Path to your compiled binary
            "args": ["8", "6", "5", "3", "1", "2 7 12 333", "14"], // Example arguments
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build" // Optional: Add a build task
        }
    ]
}